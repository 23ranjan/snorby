<li id='event_<%= event.sid %><%= event.cid %>' class='event' data-event-id='<%= event.sid %><%= event.cid %>' data-event-sid='<%= event.sid %>' data-event-cid='<%= event.cid %>'>
	
	<div class='row'>
		
		<div class='select small'><%= check_box_tag 'event-selector', nil, false, :class => 'event-selector' %></div>
		
		<div class='important small'>
			<% if event.favorite? %>
				<div class='destroy-favorite enabled'></div>
			<% else %>
				<div class='create-favorite enabled'></div>
			<% end %>
		</div>
		
		<div class='severity small'><span class='severity sev<%= event.signature.severity_id %>'><%= event.signature.severity_id %></span></div>
		<div class='click sensor address'><%= event.sensor.hostname %></div>
		<div class='click src_ip address'><%= event.ip.ip_src %></div>
		<div class='click dst_ip address'><%= event.ip.ip_dst %></div>
		<div class='click signature'><%= truncate(event.signature.name, :length => 80, :omission => '...') %></div>
		<div class='click timestamp'><%= event.pretty_time %></div>
		
	</div>
	
	<div style='display:none;' class='event-data' data='false'></div>

</li>