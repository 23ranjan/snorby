<div id='note_<%= note.id %>' class='event-note round'>
	
	<div class='note-avatar-holder'>
		<%= image_tag note.user.avatar.url(:small) %>
	</div>
	
	<% if current_user.admin %>
		<div class='note-options'>
			<%= link_to "Destroy Note", '#', :class => 'destroy-event-note', :"data-note-id" => note.id %> |
			<%= link_to "Edit Note", '#', :class => 'edit-event-note', :"data-note-id" => note.id %>
		</div>
	<% end %>
	
	<div class='username'>
		<span><%= note.user %></span> 
		<i><%= time_ago_in_words(note.created_at) %></i>
		
	</div>
	
	<div class='note-body'>
		<%= note.body %>
	</div>
	
</div>