<%= title "Listing Sensors", do -%>

	<li>Hello</li>
	
	<% if current_user.admin %>
		<%= render :partial => 'settings/menu' %>
	<% end %>

<%- end -%>

<div id="sensors" class='boxit'>
	
	<table border="0" cellspacing="0" cellpadding="0">
		<tr>		
			<th>ID</th>
			<th>Name</th>
			<th>Hostname</th>
			<th>Interface</th>
			<th>Event Count</th>
			<th>Last Event</th>
		</tr>
		<tbody class='sensors'>
			<%= render @sensors %>
		</tbody>
	</table>


	<%= pager(@sensors, 'sensors') %>
	
</div>