<tr id='sensor_<%= sensor.sid %>' class='sensor' data-sensor-id='<%= sensor.sid %>'>
	<td class='id first'><%= sensor.sid %></td>
	<td class='name edit-sensor-name' data-sensor-id='<%= sensor.sid %>'><%= sensor.name %></td>
	<td class='hostname'><%= sensor.hostname %></td>
	<td class='interface'><%= sensor.interface %></td>
	<td class='event_count'><%= sensor.events.count %></td>
	
	<% if sensor.events.last.blank? %>
		<td class='last_event_time last'>N/A</td>
	<% else %>
		<td class='last_event_time last'><%= sensor.events.last.timestamp.strftime('%m/%d/%Y %l:%M %p') %></td>
	<% end %>
	
</tr>