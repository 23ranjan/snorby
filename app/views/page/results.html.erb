<% if params[:title] %>
	
	<%= title "#{truncate(params[:title])} <i>#{pluralize(@events.pager.total, 'event')} found</i>".html_safe, "#{params[:title]}" do %>
		<%= render :partial => 'events/menu' %>
	<% end %>
	
<% else %>
	
	<%= title "Search Results <i>#{pluralize(@events.pager.total, 'event')} found</i>".html_safe, 'Search Results' do %>
		<%= render :partial => 'events/menu' %>
	<% end %>
	
<% end %>

