<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8">
    
		<title><%= content_for?(:title) ? yield(:title) : "Snorby #{Snorby::VERSION}" %></title>

    <%= stylesheet_link_tag 'grid', 'snorby', :cache => true %>
    <%= javascript_include_tag 'jquery', 'jquery-ui', 'mustache', 'growl', 'snorby', :cache => true %>
    <%= csrf_meta_tag %>

		<%= yield(:head) %>

		<style type="text/css">
			<%- @severities.each do |sev| -%>
				<%= "ul.table li div.small span.severity.sev#{sev.sig_id} {background-color: #{sev.bg_color};color: #{sev.text_color};}" %>
			<%- end -%>
		</style>

  </head>
  
	<body>
		
		<%= render :partial => 'layouts/header' %>

		<%= render :partial => 'layouts/content' %>

		<%= render :partial => 'layouts/footer' %>
		
		<%= yield(:footer) %>
  </body>

</html>
